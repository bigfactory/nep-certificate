#!/bin/bash

outputPath=$1
cd $outputPath
openssl genrsa -out -des3 CA.key 2048
openssl req -x509 -new -nodes -key CA.key -days 36500 -out CA.crt \
     -subj "/C=CN/ST=SH/L=SH/O=Nep/OU=Section/CN=Nep SSL Proxy/emailAddress=Nep@Nep"
echo "============="
echo "CA generated at :"
pwd
echo "============="

chmod 666 CA.*

#open .

exit 0